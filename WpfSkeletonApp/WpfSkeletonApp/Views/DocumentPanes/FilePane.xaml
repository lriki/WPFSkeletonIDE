<UserControl x:Class="WpfSkeletonApp.Views.DocumentPanes.FilePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSkeletonApp.Views.DocumentPanes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="LightGray" Background="LavenderBlush" VerticalAlignment="Top" >
            <TextBlock Margin="4">
                アクターひとり分のエディタウィンドウです。
            </TextBlock>
        </Border>

        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Left">
                <TextBox Text="アクター名" Margin="4" />
                <Border Width="100" Height="100" BorderThickness="1" BorderBrush="Gray" Margin="4" >
                    <TextBlock Text="画像" />
                </Border>

                <TextBox Text="パラメータA" Margin="4" />
                <TextBox Text="パラメータB" Margin="4" />
                <TextBox Text="パラメータC..." Margin="4" />
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
